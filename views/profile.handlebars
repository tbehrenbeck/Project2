<div class="wrapper m-auto" style="width: 80%">
  <div class="row">  

    {{!-- left column --}}
    <div class="col-md-9">

        {{!-- profile summary card--}}
        <div class="card" id="profile-summary" style="width: 100%; margin: 50px auto;">

            <div class="card-header">
                <h2>{{data.fullName}}</h2>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <img id="edit-profile-pic" class="float-left" src="{{data.profilePic}}" style="height:250px;">
                    </div>
                    <div class="col-md-8">
                        <div class="card-text">
                            <div class="row">
                                <h3>Daily Summary</h3>
                            </div>
                            <div class="row">
                                <div class="card summary">
                                    <span class="circle">
                                        <p class="circle-text">{{data.recCals}}</p>
                                    </span>
                                    <div class="card-text text-center">calories</div>
                                </div>
                                <div class="card summary">
                                    <span class="circle">
                                        <p class="circle-text">{{data.protein}}g</p>
                                    </span>
                                    <div class="card-text text-center">protein</div>
                                </div>
                                <div class="card summary">
                                    <span class="circle">
                                        <p class="circle-text ">{{data.carbs}}g</p>
                                    </span>
                                    <div class="card-text text-center">carbs</div>
                                </div>
                                <div class="card summary">
                                    <span class="circle">
                                        <p class="circle-text">{{data.fats}}g</p>
                                    </span>
                                    <div class="card-text text-center">fat</div>
                                </div>
                            </div>
                            <div class="row">
                                <button class="mt-3">Update Macros</button>  
                            </div>

                        </div>
                    </div>
                </div>
            </div>

        </div>
        
        {{!-- recipe search card --}}
        <div class="card" id="recipe-search" style="width: 100%; margin: 50px auto;">
            <div class="card-header">
                <h3>Search Recipes</h3>
            </div>
            <div class="card-body">
                <form>
                    <div class="row text-center">
                    <div class="mx-auto" style="width:80%; position:relative">
                        <span id="protein">
                            {{!-- <label for="protein-options"><h5>Pick your Protein</h5></label> --}}
                            <select class="dropdown float-left" id="protein-options">
                                <option>Select your protein...</option>
                                <option value="chicken">chicken</option>
                                <option value="beef">beef</option>
                                <option value="pork">pork</option>
                                <option value="turkey">turkey</option>
                                <option value="fish">fish</option>
                                <option value="shrimp">shrimp</option>
                            </select>
                        </span>
                        <span id="diet">
                            {{!-- <label for="diet-options"><h5>Diet Options</h5></label> --}}
                            <select class="dropdown" id="diet-options">
                                <option>Special diet options...</option>
                                <option value="high-protein">high protein</option>
                                <option value="high-fiber">high fiber</option>
                                <option value="low-fat">low fat</option>
                                <option value="low-carb">low carb</option>
                                <option value="low-sodium">low sodium</option>
                            </select>
                        </span>
                        <span id="health">
                            {{!-- <label for="health-options"><h5>Additional Health Options</h5></label> --}}
                            <select class="dropdown float-right" id="health-options">
                                <option>Other health options...</option>
                                <option value="pescatarian">pescatarian</option>
                                <option value="vegetarian">vegetarian</option>
                                <option value="vegan">vegan</option>
                                <option value="paleo">paleo</option>
                                <option value="kosher">kosher</option>
                                <option value="dairy-free">dairy-free</option>
                                <option value="gluten-free">gluten-free</option>
                                <option value="peanut-free">peanut-free</option>
                                <option value="shellfish-free">shellfish-free</option>
                                <option value="pork-free">pork-free</option>
                                <option value="alcohol-free">alcohol-free</option>
                                <option value="soy-free">soy-free</option>
                                <option value="egg-free">egg-free</option>
                                <option value="wheat-free">wheat-free</option>
                                <option value="low-sugar">low-sugar</option>
                                <option value="celery-free">celery-free</option>
                            </select>
                        </span>
                    </div>
                    </div><br>
                    <div class="row">
                        <div class="mx-auto" style="width:80%">
                            <div id="calories" style="border:1px solid #f7f7f7 height:45px width:50% float-left">
                                <label for="calorie-range"><h6>Recipes between</h6></label>
                                <input type="number" id="min-cals" placeholder=" min" name="min-cals" min="0" max="5000"> and 
                                <input type="number" id="max-cals" placeholder=" max" name="max-cals" min="0" max="5000"> calories
                            </div>
                            <div id="meals" style="border:1px solid #f7f7f7 height:45px float-right">
                                <label for="meal-count"><h6>I eat </h6></label>
                                <input type="number" id="meal-count" placeholder="5" name="meal-count" min="0" max="10"> meals per day
                            </div>
                        </div>
                    </div>
                <div class="row">
                    <div class="mx-auto mt-3" style="width:80%">
                        <button id="search-btn">Search</button>
                    </div>
                </div>
                
                    
                </form>
                
            </div>

        </div>

    </div>

    {{!-- right column  --}}
    <div class="col-md-3">

        {{!-- favorites list --}}
        <div class="card" id="favorites-list" style="margin:50px auto">
            <div class="card-header">
                <h3>Favorites <span class="fa fa-heart" style="size:2x"></span></h3>
            </div>
            <div class="card-body">

                {{!-- replace with recipe info from db using handlebars --}}
                <p>Add your favorite recipes here!</p>
                <div class="my-3">
                    <img src="https://via.placeholder.com/150x100" class="">
                    <span><a href="#">Recipe Title</a></span>
                </div>
                <hr>
                 <div class="my-3">
                    <img src="https://via.placeholder.com/150x100">
                    <span><a href="#">Recipe Title</a></span>
                </div>
                <hr>
                 <div class="my-3">
                    <img src="https://via.placeholder.com/150x100">
                    <span><a href="#">Recipe Title</a></span>
                </div>
                <hr>
                 <div class="my-3">
                    <img src="https://via.placeholder.com/150x100">
                    <span><a href="#">Recipe Title</a></span>
                </div>
                <hr>
            </div>
        </div>
    </div>

  </div>
</div> 

